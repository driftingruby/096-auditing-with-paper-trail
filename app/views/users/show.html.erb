<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

<h2>Versions</h2>
<table class='table'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Modifier</th>
      <th>Action</th>
      <th>Changes</th>
    </tr>
  </thead>
  <tbody>
    <% @user.versions.each do |version| %>
      <%= tag.tr do %>
        <%= tag.td version.id %>
        <%= tag.td version.whodunnit %>
        <%= tag.td link_to 'rollback', user_rollback_path(@user, version: version) %>
        <%= tag.td do %>
          <%= tag.ul class: 'list-group' do %>
            <li class='list-group-item'>
              <strong>First Name:</strong> 
              <%= version.changed_object.first_name %>
            </li>
            <li class='list-group-item'>
              <strong>Last Name:</strong> 
              <%= version.changed_object.last_name %>
            </li>
            <li class='list-group-item'>
              <strong>Email:</strong> 
              <%= version.changed_object.email %>
            </li>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
</table>